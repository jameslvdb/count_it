<div id="<%= dom_id meal %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= meal.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Daily log:</strong>
    <%= meal.daily_log_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this meal", meal, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this meal", edit_meal_path(meal), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
