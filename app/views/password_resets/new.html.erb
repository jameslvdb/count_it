<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">
    Reset Your Password
  </h1>

  <%= form_with model: @user, url: password_reset_path do |form| %>
    <div class="my-5">
      <%= form.label :email, class: "block" %>
      <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <%= form.submit "Reset password", class: "rounded-lg py-3 px-5 bg-blue-600
    text-white inline-block font-medium cursor-pointer" %>
  <% end %>
</div>
