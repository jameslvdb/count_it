<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">
    Update Password
  </h1>

  <%= form_with model: current_user, url: password_path do |form| %>

    <% if form.object.errors.any? %>
      <% form.object.errors.full_messages.each do |message| %>
        <p class="text-red-500"><%= message %></p>
      <% end %>
    <% end %>

    <div class="my-5">
      <%= form.label :password_challenge, "Current password", class: "block" %>
      <%= form.password_field :password_challenge, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :password, "New password", class: "block" %>
      <%= form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label :password_confirmation, class: "block" %>
      <%= form.password_field :password_confirmation, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <%= form.submit "Update Password", class: "rounded-lg py-3 px-5 bg-blue-600
    text-white inline-block font-medium cursor-pointer" %>
  <% end %>
</div>
